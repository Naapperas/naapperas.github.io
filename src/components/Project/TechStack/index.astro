---
import type { CollectionEntry } from "astro:content";

import Simple from "./Simple.astro";
import Detailed from "./Detailed.astro";

export interface Props {
    techStack: Required<CollectionEntry<"project">["data"]>["techStack"];
}

const { techStack } = Astro.props;
---

<section class="self-center flex flex-col gap-2">
    {
        Array.isArray(techStack) ? (
            <Simple techStack={techStack} />
        ) : (
            <Detailed techStack={techStack} />
        )
    }
</section>
