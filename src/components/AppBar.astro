---
const pages = [
    {
        name: "About",
        url: "/about",
    },
    {
        name: "Contact",
        url: "/contact",
    },
    {
        name: "Blog",
        url: "/blog",
    },
    {
        name: "Projects",
        url: "/projects",
    },
    {
        name: "Resume",
        url: "/resume",
    },
];
---

<header class="top-bar">
    <a href="/">Home Page</a>
    <nav class="links">
        {
            pages.map((page) => (
                <a class="nav-link" href={page.url}>
                    {page.name}
                </a>
            ))
        }
    </nav>
</header>
<style>
    .top-bar {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        font-size: 1.5rem;
        border-bottom: 1px solid #e5e5e5;
    }

    .links {
        display: flex;
        flex-direction: row;
    }

    .nav-link {
        margin-left: 1rem;
    }
</style>
