---
const pages = [
  {
    name: "About",
    url: "/about",
  },
  {
    name: "Contact",
    url: "/contact",
  },
  {
    name: "Blog",
    url: "/blog",
  },
  {
    name: "Projects",
    url: "/projects",
  },
  {
    name: "Resume",
    url: "/cv.pdf",
  },
] as const;
---

<header class="">
  <a href="/"><span class="">home</span></a>
  <nav class="">
    {
      pages.map((page) => (
        <a
          class:list={[
            "nav-link",
            { selected: Astro.url.pathname.includes(page.url) },
          ]}
          href={page.url}
        >
          {page.name}
        </a>
      ))
    }
  </nav>
</header>
