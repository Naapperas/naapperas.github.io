---
import { getCollection } from "astro:content";

import ProjectCard from "../../components/ProjectCard.astro";
import Layout from "../../layouts/Content.astro";

const projects = await getCollection("project");
---

<Layout title="Projects">
    <header>
        <h2>Projects</h2>
        <p>These are some of the projects I have developed so far:</p>
    </header>
    <section class="project-list">
        {projects.map((entry) => <ProjectCard project={entry} />)}
    </section>
</Layout>

<style>
    .project-list {
        margin-top: 2.5rem;

        /* taken from https://css-tricks.com/an-auto-filling-css-grid-with-max-columns/ */

        --grid-layout-gap: 10px;
        --grid-column-count: 3;
        --grid-item--min-width: 221px;

        /**
        * Calculated values.
        */
        --gap-count: calc(var(--grid-column-count) - 1);
        --total-gap-width: calc(var(--gap-count) * var(--grid-layout-gap));
        --grid-item--max-width: calc(
            (100% - var(--total-gap-width)) / var(--grid-column-count)
        );

        display: grid;
        grid-template-columns: repeat(
            auto-fill,
            minmax(
                max(var(--grid-item--min-width), var(--grid-item--max-width)),
                1fr
            )
        );
        grid-gap: var(--grid-layout-gap);
    }

    header h2 {
        font-size: 3.5em;
    }

    header p {
        font-size: 1.5em;
    }
</style>
