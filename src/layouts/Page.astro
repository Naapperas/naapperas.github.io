---
import BaseLayout, { type Props as BaseProps } from "./Content.astro";
import Header from "../components/Page/Header.astro";

export interface Props extends BaseProps {
  contentTitle: string;
  description: string;
}

const { title: pageTitle, contentTitle, description } = Astro.props;
---

<BaseLayout title={pageTitle}>
  <Header title={contentTitle} description={description} />
  <main class="px-10 py-8 items-center flex-col flex-1 flex">
    <slot />
  </main>
</BaseLayout>
